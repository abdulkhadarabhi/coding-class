#include<stdio.h>
#include<string.h>
int main()
{
    char str[100];
    int count = 0, i;
    printf("Enter the string\n");
    scanf("%[^\n]s", str);
    for (i = 0; str[i]!= '\0'; i++)
    {
       if(i%2==0)
             {
                 str[i]=str[i]-32;
             }    
    }
    printf("%s",str);
    return 0;
}

output:
Enter the string
aditya
AdItYa
