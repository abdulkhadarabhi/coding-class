#include<stdio.h>
int main()
{
    int i,n,sum;
	long fact=1;
    printf("Enter the value \n");
    scanf("%d",&n);
    sum=0;
    for(i=1;i<=n;i++)
        {
		fact = fact * i;
		sum= sum+ fact;
		}
    printf("The Sum of factorial of %d = %d\n",n,sum);
    return 0;
}

output:
Enter the value 
6
The Sum of factorial of 6 = 873
